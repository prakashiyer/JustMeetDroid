<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/editProfilePicThumbnail"
            android:layout_width="fill_parent"
            android:layout_height="350dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/image_border"
            android:src="@drawable/ic_launcher"
            android:onClick="editImage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin_30"
            android:layout_marginStart="@dimen/left_margin_15"
            android:layout_marginEnd="@dimen/right_margin_15"
            android:inputType="textPersonName"
            android:hint="@string/user_name_hint"
            android:ems="10"
            android:textSize="@dimen/text_size_18"
            android:typeface="sans"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin_15"
            android:layout_marginStart="@dimen/left_margin_15"
            android:layout_marginEnd="@dimen/right_margin_15"
            android:inputType="phone"
            android:hint="@string/user_phone_hint"
            android:ems="10"
            android:textSize="@dimen/text_size_18"
            android:typeface="sans"
            android:layout_gravity="center_horizontal" />

        <ImageButton
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editProfileBtn"
            android:src="@drawable/ic_add_icon"
            android:background="@drawable/fab"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:onClick="editProfile"
            android:layout_marginBottom="@dimen/top_margin_45"
            android:layout_marginRight="@dimen/top_margin_45"
            android:layout_gravity="right|bottom" />
    </LinearLayout>
</GridLayout>


