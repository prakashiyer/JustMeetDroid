        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/viewexpense1Label"
