<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1">

    <ImageView
        android:id="@+id/profilePicView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_row="0"
        android:layout_marginTop="@dimen/top_margin_30"
        android:src="@drawable/ic_launcher"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/text1"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center|top"
        android:layout_marginTop="@dimen/top_margin_15"
        android:layout_marginStart="@dimen/left_margin_15"
        android:layout_marginEnd="@dimen/right_margin_15"
        android:layout_row="1"
        android:text="@string/title_0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="@dimen/text_size_18"
        android:textStyle="italic|bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/text3"
        android:layout_height="223dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|fill_vertical"
        android:layout_marginStart="@dimen/left_margin_15"
        android:layout_marginEnd="@dimen/right_margin_15"
        android:layout_row="4"
        android:gravity="top"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:typeface="sans" />

</GridLayout>